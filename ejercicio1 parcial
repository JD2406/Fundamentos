#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    float l,area,perimetro;
    
    cout<<"Ingrese el lado: ";
    cin>>l;
    
    area = pow(l,2);
    perimetro=l+l+l+l
    
    cout<<"El area del cuadrado es: "<<area<<endl;
    cout<<"El perimetro del cuadrado es: "<<perimetro<<endl;
    
    
    
    

    return 0;
}
