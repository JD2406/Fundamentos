#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    
int a, b, r, opcion;

cout<<"Ingresar a:  ";
cin>>a;
cout<<"Ingresar b:  ";
cin>>b;


cout<<"1.-Suma"<<endl;
cout<<"2.-Resta"<<endl;
cout<<"3.-Producto"<<endl;
cout<<"4.-Division"<<endl;
cout<<"Elige una opcion: " <<endl;
cin>>opcion;
switch (opcion) {
    case 1: r= a + b; break;
    case 2: r= a - b; break;
    case 3: r= a * b; break;
    case 4: r= a / b; break;
    default: cout<<"Opcion invalida"<<endl;
}
cout<<"El resultado es: "<<r<<endl;
    
}
